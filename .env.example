# ============================================================================
# TWS SIGNAL SERVICE - KONFIGURATION
# ============================================================================
# WICHTIG: Kopiere diese Datei zu .env und trage deine echten Credentials ein!
# Die .env Datei NIEMALS in Git committen!

# ===== TWS VERBINDUNG =====
# Lokale TWS Installation (nicht Docker!)
IB_HOST=127.0.0.1
IB_PORT=7497  # 7497 für Paper Trading, 7496 für Live Trading
IB_CLIENT_ID=1

# ===== TRADING MODUS =====
IS_PAPER_TRADING=True

# ===== PUSHOVER BENACHRICHTIGUNGEN =====
# Registriere dich auf https://pushover.net/
# 1. Erstelle Account und erhalte User Key
# 2. Erstelle Application und erhalte API Token
PUSHOVER_USER_KEY=your_pushover_user_key_here
PUSHOVER_API_TOKEN=your_pushover_api_token_here

# ===== WATCHLIST =====
# Kommasepariert, keine Leerzeichen!
WATCHLIST_STOCKS=AAPL,MSFT,GOOGL,AMZN,TSLA

# ===== RISIKOMANAGEMENT =====
ACCOUNT_SIZE=100000.0
MAX_RISK_PER_TRADE_PCT=0.01  # 1% Risiko pro Trade
MAX_CONCURRENT_POSITIONS=5

# ===== LOGGING =====
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
