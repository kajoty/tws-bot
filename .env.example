# ============================================================================
# IB GATEWAY CREDENTIALS
# ============================================================================
# WICHTIG: Kopiere diese Datei zu .env und trage deine echten Credentials ein!
# Die .env Datei NIEMALS in Git committen!

TWS_USERID=your_ib_username
TWS_PASSWORD=your_ib_password
TRADING_MODE=paper  # paper oder live
READ_ONLY_API=no    # yes für Read-Only Mode
VNC_PASSWORD=vncpass123  # Passwort für VNC-Zugriff auf Gateway

# ============================================================================
# TRADING BOT KONFIGURATION
# ============================================================================

# IB Gateway Verbindung
IB_HOST=ib-gateway  # "ib-gateway" in Docker, "localhost" für lokalen Betrieb
IB_PORT=4002  # 4002 für Paper Trading (Gateway), 4001 für Live Trading
IB_CLIENT_ID=1

# Trading Modus
IS_PAPER_TRADING=True
DRY_RUN=False  # True = Keine echten Orders

# Kapital & Risiko
ACCOUNT_SIZE=100000.0
MAX_RISK_PER_TRADE_PCT=0.01  # 1% Risiko pro Trade
MAX_CONCURRENT_POSITIONS=5
MIN_POSITION_SIZE=100.0

# Watchlist (kommasepariert, keine Leerzeichen!)
WATCHLIST_STOCKS=AAPL,MSFT,GOOGL,AMZN,TSLA

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
